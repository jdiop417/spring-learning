      http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

    <bean id="bfpp" class="org.learing.spring.beanFactoryPostProcessor.ObsenityRemovingBeanFactoryPostProcessor">
        <property name="obscenties">
            <set>
                <value>bollocks</value>
                <value>winky</value>
                <value>bum</value>
                <value>Microsoft</value>
